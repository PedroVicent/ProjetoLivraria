@model ProjetoLivraria.Models.Emprestimo

@{
    ViewData["Title"] = "CadastrarEmprestimo";
}

<h2>Cadastrar Emprestimo</h2>

<h4>Emprestimo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CadastrarEmprestimo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LivroId" class="control-label"></label>
                <input asp-for="LivroId" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="PessoaId" class="control-label"></label>
                <input asp-for="PessoaId" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-action="CadastroEmprestimo" type="submit" value="Cadastrar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Livros">Voltar para os Livros</a> |
    <a asp-action="Pessoas">Voltar para as Pessoas</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
